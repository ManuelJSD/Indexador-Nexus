<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nexus.indexador.controllers.ConsoleController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="700.0" styleClass="main-toolbar" BorderPane.alignment="CENTER">
            <items>
                <Button mnemonicParsing="false" onAction="#btnClear_OnAction" styleClass="toolbar-button" text="Limpiar">
                    <graphic>
                        <StackPane styleClass="icon, icon-delete" />
                    </graphic>
                    <tooltip>
                        <Tooltip text="Limpiar consola" />
                    </tooltip>
                </Button>
                <Button mnemonicParsing="false" onAction="#btnCopy_OnAction" styleClass="toolbar-button" text="Copiar">
                    <graphic>
                        <StackPane styleClass="icon, icon-copy" />
                    </graphic>
                    <tooltip>
                        <Tooltip text="Copiar todo al portapapeles" />
                    </tooltip>
                </Button>
            <CheckBox fx:id="chkAutoScroll" mnemonicParsing="false" selected="true" text="Auto-Scroll" styleClass="checkbox-text" />
            </items>
        </ToolBar>
    </top>
    <center>
        <TextArea fx:id="txtConsole" editable="false" prefHeight="200.0" prefWidth="200.0" styleClass="console-area" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="Consolas" size="13.0" />
         </font></TextArea>
    </center>
</BorderPane>
