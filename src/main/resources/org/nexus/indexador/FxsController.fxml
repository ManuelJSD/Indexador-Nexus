<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="700.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nexus.indexador.controllers.FxsController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblNFXs" styleClass="label-header" text="FXs cargadas: 0" />
            <TextField fx:id="txtSearch" promptText="Buscar ID..." />
            <ListView fx:id="lstFxs" styleClass="data-list" VBox.vgrow="ALWAYS" />
         </children>
         <BorderPane.margin>
            <Insets right="15.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="label-header" text="Vista Previa y Propiedades" />
            <VBox styleClass="preview-box-param" VBox.vgrow="ALWAYS">
               <children>
                  <VBox style="-fx-background-color: #2b2b2b; -fx-padding: 5;" spacing="5.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Vista Previa" />
                              <Separator orientation="VERTICAL" />
                              <CheckBox fx:id="chkShowMarker" selected="true" text="Marcador" textFill="WHITE" />
                              <Separator orientation="VERTICAL" />
                              <Label text="Zoom:" textFill="WHITE"/>
                              <Slider fx:id="sliderZoom" min="0.5" max="5.0" value="1.0" blockIncrement="0.1" prefWidth="150.0"/>
                           </children>
                        </HBox>
                        <Label style="-fx-text-fill: #aaa; -fx-font-size: 11px;" text="Arrastra para mover la vista. Rueda para Zoom." />
                     </children>
                  </VBox>
                  <StackPane fx:id="stackPreview" style="-fx-background-color: #1e1e1e;" VBox.vgrow="ALWAYS">
                     <children>
                        <ScrollPane fx:id="scrollPreview" fitToHeight="true" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
                           <content>
                               <StackPane alignment="CENTER" style="-fx-background-color: #1e1e1e;">
                                   <children>
                                      <ImageView fx:id="imgFX" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                                   </children>
                               </StackPane>
                           </content>
                        </ScrollPane>
                     </children>
                  </StackPane>
               </children>
            </VBox>
            
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Offset X:" />
                  <TextField fx:id="txtOffsetX" GridPane.rowIndex="1" />
                  
                  <Label text="Offset Y:" GridPane.columnIndex="1" />
                  <TextField fx:id="txtOffsetY" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Index del FX:" GridPane.columnIndex="2" />
                  <TextField fx:id="txtFX" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDelete_OnAction" styleClass="button-danger" text="Remover" />
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAdd_OnAction" text="Nuevo" />
                   <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" onAction="#btnSave_OnAction" text="Aplicar cambios" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
