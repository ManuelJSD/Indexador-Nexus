<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nexus.indexador.controllers.ValidationResultController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" spacing="10">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label styleClass="window-title" text="Reporte de Integridad" />
            <Label styleClass="info-label" text="Doble clic en un error para ir al GRH correspondiente." />
            
            <TableView fx:id="tblResults" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colType" prefWidth="100.0" text="Tipo" />
                <TableColumn fx:id="colId" prefWidth="80.0" text="GRH ID" />
                <TableColumn fx:id="colMessage" prefWidth="480.0" text="Mensaje" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btnCopy" mnemonicParsing="false" onAction="#btnCopy_OnAction" text="Copiar al Portapapeles" styleClass="button-secondary"/>
                  <Button fx:id="btnClose" mnemonicParsing="false" onAction="#btnClose_OnAction" text="Cerrar" styleClass="button-primary"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
