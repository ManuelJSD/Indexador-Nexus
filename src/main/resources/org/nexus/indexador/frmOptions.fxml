<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="350.0" prefWidth="600.0" styleClass="config-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nexus.indexador.controllers.frmOptions">
   <children>
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Rutas">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <GridPane hgap="10" layoutX="14.0" layoutY="14.0" vgap="12" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                           <children>
                              <Label styleClass="config-label" text="Gráficos:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="txtGraphicsPath" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Button fx:id="btnBrowseGraphics" onAction="#onBrowseGraphics" prefWidth="40" text="..." GridPane.columnIndex="2" GridPane.rowIndex="0" />
                              <Label styleClass="config-label" text="Init:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="txtInitPath" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Button fx:id="btnBrowseInit" onAction="#onBrowseInit" prefWidth="40" text="..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              <Label styleClass="config-label" text="Dat:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="txtDatPath" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Button fx:id="btnBrowseDat" onAction="#onBrowseDat" prefWidth="40" text="..." GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              <Label styleClass="config-label" text="Exportados:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <TextField fx:id="txtExportPath" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Button fx:id="btnBrowseExport" onAction="#onBrowseExport" prefWidth="40" text="..." GridPane.columnIndex="2" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Apariencia">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <GridPane hgap="10.0" layoutX="14.0" layoutY="14.0" vgap="12.0">
                           <children>
                              <Label styleClass="config-label" text="Tema de la Aplicación:" />
                              <ComboBox fx:id="cmbTheme" prefWidth="200.0" promptText="Seleccionar Tema" GridPane.columnIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
      <HBox alignment="CENTER_RIGHT" spacing="10">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="btnSave" onAction="#onSave" prefWidth="100" text="Guardar" />
            <Button fx:id="btnCancel" onAction="#onCancel" prefWidth="100" text="Cancelar" />
         </children>
      </HBox>
   </children>
</VBox>
